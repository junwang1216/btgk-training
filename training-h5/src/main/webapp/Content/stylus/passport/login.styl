@require '../base'

html, body
    width 100%
    height 100%
body
    background #fffffd url("/Content/images/passport/icon-bg.png") no-repeat bottom left
    background-size 100%

.page__bd
    background linear-gradient(to bottom, #FF7256, rgba(0, 0, 255, 0.5))
    height 100%
    width 100%

.logo
    margin 0 auto
    padding 8%
    text-align center
    img
        width 60%

.weui-agree
    width 50%
    font-size 14px
    .weui-agree__text
        color #fff

.weui-btn_yellow
    background-color #FF7256
.weui-btn_yellow:not(.weui-btn_disabled):visited
    color #FFFFFF
.weui-btn_yellow:not(.weui-btn_disabled):active
    color #FFFFFF
    background-color #FF7256

.wj-mm
    text-align right
    line-height 33px
    padding-right 10px
    padding-top 3px
    font-size 14px
    a
        color #fff

.loginPage
    padding 10px

.input-container
    display -webkit-box
    border-radius 5px
    background rgba(205,140,149,.9)
    margin-bottom 15px
    height 43px
    position relative
    label
        display block
        padding 0 5px
        img
            width 28px
            padding 8px 6px 0
    .flex
        -webkit-box-flex 1
    input
        padding 11px 10px 11px 0
        width 100%
        -webkit-box-sizing border-box
        border none
        background none
        font-size 15px
        color #fff
        &::-webkit-input-placeholder
            color#fff
    .delete
        position absolute
        top 50%
        right 0
        -webkit-transform translate(0,-50%)
        padding 5px 8px
        display none
        img
            width 26px
            padding-top 5px
    &.error
        border 1px solid #FF7256

.error-txt
    position fixed
    bottom 20px
    left 0
    width 100%
    -webkit-box-sizing border-box
    text-align center
    span
        display inline-block
        padding 10px 20px
        background rgba(0,0,0,.5)
        border-radius 5px
        color #fff
